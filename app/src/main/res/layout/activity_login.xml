<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    tools:context=".View.azerCode.Login">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/login" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="RAKNA APP"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:layout_marginLeft="24.0dip"
            android:layout_marginRight="24.0dip"
            android:background="@drawable/bg_button_white_style">

            <ImageView
                android:id="@id/text"
                android:layout_width="26dp"
                android:layout_height="40dp"
                android:layout_marginLeft="18.0dip"
                android:src="@drawable/img_account" />

            <EditText
                android:id="@+id/E_mail_signinn"
                style="@style/editext_gray"
                android:layout_marginRight="18.0dip"
                android:layout_toRightOf="@id/text"
                android:hint="@string/input_emailorphone"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:layout_marginLeft="24.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginRight="24.0dip"
            android:background="@drawable/bg_button_white_style">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18.0dip"
                android:src="@drawable/login_pwd" />

            <EditText
                android:id="@+id/Password_signinn"
                style="@style/editext_gray"
                android:layout_marginRight="18.0dip"
                android:hint="@string/input_pwd"
                android:inputType="textPassword"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="47.0dip">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remember Me"
                android:layout_marginLeft="24.0dip"
                android:textColor="@color/text_gray2"
                android:textSize="16.0sp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button

                    android:id="@+id/SignInn"
                    style="@style/button_style"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:layout_marginLeft="24.0dip"
                    android:layout_marginRight="24.0dip"
                    android:text="sign in"
                    android:textSize="20dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <Button
                        android:id="@+id/progresslogin"
                        android:layout_width="70.0dip"
                        android:layout_height="70.0dip"
                        android:layout_gravity="center"
                        android:background="@drawable/proooo"
                        android:visibility="gone"

                        />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/SignInn"
                android:layout_marginLeft="24.0dip"
                android:layout_marginRight="24.0dip"
                android:orientation="horizontal"
                android:paddingTop="24.0dip">

                <TextView
                    android:id="@+id/forgot_password"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/forget_pwd"
                    android:textColor="@color/bg_btn_blue"
                    android:textSize="16.0sp" />

                <View
                    android:layout_width="10.0dip"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/createaccount"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center|right"
                    android:text="@string/main_register"
                    android:textColor="@color/bg_btn_blue"
                    android:textSize="16.0sp" />
            </LinearLayout>



            <RelativeLayout
                android:id="@+id/ll_thirdlogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/as"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/iv_thirdparty"
                    android:layout_marginLeft="24.0dip"
                    android:layout_marginRight="24.0dip"
                    android:gravity="center_vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/rest_login"
                        android:textColor="@color/bg_btn_blue"
                        android:textSize="16.0sp" />

                    <View
                        style="@style/view_line"
                        android:layout_width="fill_parent"
                        android:layout_height="1.5dip"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="27.0dip"
                        android:layout_toLeftOf="@+id/textView3" />

                    <View
                        style="@style/view_line"
                        android:layout_width="fill_parent"
                        android:layout_height="1.5dip"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="27.0dip"
                        android:layout_toRightOf="@+id/textView3" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/iv_thirdparty"
                    android:layout_width="fill_parent"
                    android:layout_height="82.0dip"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/google_login"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/googleg_standard_color_18"
        android:visibility="visible" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="google account"
        android:textColor="@color/btn_blue_p"
        android:textSize="16.0sp"
        />

</LinearLayout>

                    <View
                        android:layout_width="30.0dip"
                        android:layout_height="wrap_content" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/facebock_login"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/socialize_facebook"
        android:visibility="visible" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="face book"
        android:textColor="@color/btn_blue_p"
        android:textSize="16.0sp"
        />
</LinearLayout>



                </LinearLayout>

            </RelativeLayout>
