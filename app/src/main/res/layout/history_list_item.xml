<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp">

        <RelativeLayout
            android:id="@+id/ly_history_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_garage_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garage Name"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="10dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"/>

            <ImageView
                android:id="@+id/iv_owner_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/rate_bar"
                android:padding="5dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.8"
                android:layout_toLeftOf="@id/iv_owner_rate"
                android:layout_centerVertical="true"
                android:textColor="#A89701"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/customerpic"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_below="@id/ly_history_header"
            android:src="@drawable/image_example"
            android:scaleType="centerCrop"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tv_garage_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone_secondary"
            android:layout_toRightOf="@id/customerpic"
            android:layout_alignTop="@id/customerpic"
            android:text="01008032952"
            android:drawablePadding="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/grey"/>

        <TextView
            android:id="@+id/tv_garage_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_date"
            android:drawablePadding="10dp"
            android:text="21/2/2019"
            android:layout_below="@id/tv_garage_phone"
            android:layout_alignLeft="@id/tv_garage_phone"
            android:paddingBottom="5dp"
            android:textColor="@color/grey"/>

        <TextView
            android:id="@+id/tv_garage_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_from_to_time"
            android:drawablePadding="10dp"
            android:text="7:05 - 9:30"
            android:layout_below="@id/tv_garage_date"
            android:layout_alignLeft="@id/tv_garage_date"
            android:paddingBottom="5dp"
            android:textColor="@color/grey"/>

        <TextView
            android:id="@+id/tv_garage_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="10dp"
            android:text="Sea Street, Melig, Elmenofia"
            android:layout_below="@id/tv_garage_time"
            android:layout_alignLeft="@id/tv_garage_time"
            android:paddingBottom="5dp"
            android:textColor="@color/grey"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</FrameLayout>

